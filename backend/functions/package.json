{
  "engines": {
    "node": "14"
  },
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "test": "jest --silent",
    "start": "npm run shell",
    "logs": "firebase functions:log",
    "lint": "eslint src/**/*.{tsx,ts}",
    "lint:fix": "eslint --fix src/**/*.{tsx,ts}",
    "deploy-dev": "firebase use develop && firebase deploy --only functions",
    "deploy-prod": "firebase use production && firebase deploy --only functions",
    "start-dev": "firebase use develop && npm run build && firebase emulators:start --only functions",
    "start-prod": "firebase use production && npm run build && firebase emulators:start --only functions"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "main": "lib/index.js",
  "dependencies": {
    "uuid": "^8.3.2",
    "dotenv": "^10.0.0",
    "@types/node": "^16.4.2",
    "@types/uuid": "^8.3.1",
    "firebase-admin": "^9.11.0",
    "firebase-functions": "^3.14.1"
  },
  "devDependencies": {
    "eslint": "^7.6.0",
    "faker": "^5.5.3",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.4",
    "typescript": "^3.9.10",
    "@types/faker": "^5.5.7",
    "@types/jest": "^26.0.24",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.3",
    "@typescript-eslint/parser": "^3.8.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1"
  },
  "private": true
}
