{
  "compilerOptions": {
    "include": [
      "./src"
    ],
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "jsx": "react",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "outDir": "lib",
    "sourceMap": true,
    "module": "esnext",
    "target": "es2017",
    "skipLibCheck": true,
    "compileOnSave": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  }, 
}
